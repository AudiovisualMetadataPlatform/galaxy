<tool id="azure_video_indexer" name="Azure Video Indexer OCR" version="1.0.0">
  <description>OCR Using Azure Video Indexer</description>
    <requirements>
    </requirements>
  <command detect_errors="exit_code"> $__tool_directory__/azure_video_indexer_wrapper.py $input_file $location $__root_dir__ $azure_ocr $azure_ocr_long $amp_ocr</command>
  <inputs>
	<param name="input_file" type="data" format="video" label="Input Video" help="An input video file for OCR"/>
  <param name="location" type="select" label="Azure Location" help="Region video indexer account is running in Azure">
      <option value="trial">Trial</option>
      <option value="westus2">West US 2</option>
      <option value="eastus2">East US 2</option>
    </param>
  </inputs>
  <outputs>
    <data name="azure_ocr" format="json" label="Azure OCR JSON"/>
    <data name="azure_ocr_long" format="json" label="Azure OCR JSON (Long Version)" />
    <data name="amp_ocr" format="vocr"  label="AMP OCR" />
  </outputs>
  <tests>
  </tests>
  <help>
.. class:: infomark

  Generate Video OCR using Microsoft Azure Video Indexer
  </help>
</tool>
