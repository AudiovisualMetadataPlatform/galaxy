<tool id="adjust_timestamps" name="Adjust Timestamps" version="1.0.0">
  <description>Adjust timestamps so Speech-to-Text output matches timestamps of the original file</description>
    <requirements>
        <requirement type="package" version="8.30">coreutils</requirement>
    </requirements>
  <command detect_errors="exit_code">$__tool_directory__/adjust_timestamps.py $stt_json $adj_json $amp_transcript</command>
   <inputs>
   <!-- should be wave data type -->
    <param name="stt_json" type="data" format="transcript" label="AMP Transcript From STT" help="Transcript generated from speech-to-text in the form of AMP Transcript JSON"/>"/>
    <param name="adj_json" type="data" format="json" label="Kept segments JSON From Remove Segments" help="List of kept segments"/>
  </inputs>
  <outputs>
    <data name="amp_transcript" format="transcript" label="AMP Transcript with Timestamp Adjusted"/>
  </outputs>
  <tests>
  </tests>
  <help>
.. class:: infomark

Adjust timestamps of a speech-to-text json output to match timestamps of the original file.

  </help>
</tool>
