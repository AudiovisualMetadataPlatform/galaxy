<tool id="kaldi_local" name="Kaldi Local" version="1.0.2">
  <description>Local Kaldi Speech-to-Text transcription</description>
    <requirements>
        <requirement type="package" version="8.30">coreutils</requirement>
    </requirements>
  <command detect_errors="exit_code">$__tool_directory__/kaldi_local.py $input $kaldi_transcript_json $kaldi_transcript_text;
                                    $__tool_directory__/../amp_json_schema/kaldi_local_to_schema.py $input $kaldi_transcript_json $kaldi_transcript_text $amp_transcript
  </command>
   <inputs>
   <!-- should be wave data type -->
    <param name="input" type="data" format="audio" label="Input Audio" help="An audio file"/>
  </inputs>
  <outputs>
    <data name="kaldi_transcript_json" format="json" label="Kaldi Transcript JSON"/>
    <data name="kaldi_transcript_text" format="txt" label="Kaldi Transcript Text" />
    <data name="amp_transcript" format="transcript" label="AMP Transcript" />
  </outputs>
  <tests>
  </tests>
  <help>
.. class:: infomark

Do a speech-to-text transcribe on an audio file using a local Kaldi instance.

  </help>
</tool>
