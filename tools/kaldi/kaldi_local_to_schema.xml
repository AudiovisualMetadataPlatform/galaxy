<tool id="KL-2" name="Kaldi Local to JSON" version="1.0.2">
  <description>Local Kaldi STT to standardaized JSON Schema</description>
    <requirements>
        <requirement type="package" version="8.30">coreutils</requirement>
    </requirements>
  <command detect_errors="exit_code">$__tool_directory__/../amp_json_schema/kaldi_local_to_schema.py $input $kalid_out $kalid_trans_out $json_out</command>
   <inputs>
   <!-- should be wave data type -->
    <param name="input" type="data" format="audio" label="From dataset" help="An audio file"/>
    <param name="kalid_trans_out" type="data" format="txt" label="Transcript from Kaldi" help="A text file"/>
    <param name="kalid_out" type="data" format="json" label="Speech to Text Json From Kaldi" help="A json file"/>
  </inputs>
  <outputs>
    <data format="json" name="json_out" />
  </outputs>
  <tests>
  </tests>
  <help>
.. class:: infomark

Takes the output of a Kaldi STT and transform it to a standardized schema

  </help>
</tool>
