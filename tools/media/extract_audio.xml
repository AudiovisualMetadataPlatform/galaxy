<tool id="extract_audio" name="Extract Audio" version="1.0.2">
  <description>Extract audio from audio/video file</description>
    <requirements>
        <requirement type="package" version="8.30">coreutils</requirement>
    </requirements>
  <command>ffmpeg -y -hide_banner -nostats -loglevel panic -i $input -ar $rate -ac $channels -c:a $samplesize -f wav $out_file1</command>
  <inputs>
    <param name="input" type="data" format="binary" label="From dataset" help="A video file"/>
    <param name="rate" type="select" label="Sample Rate">
      <option value="8000">8KHz</option>
      <option value="16000">16KHz</option>
      <option value="22050">22.05KHz</option>
      <option value="44100">44.1KHz (CD Quality)</option>
      <option value="48000">48KHz</option>
      <option value="96000">96KHz (Archival Quality)</option>
    </param>
    <param name="channels" type="select" label="Channels" help="Number of channels in the output">   
	  <option value="1">Mono</option>
	  <option value="2">Stereo</option>
    </param>
    <param name="samplesize" type="select" label="Sample Size" help="Sample size of output in bits per sample">
      <option value="pcm_s16le">16 Bits per Sample</option>
      <option value="pcm_s24le">24 Bits per Sample</option>
    </param>
  </inputs>
  <outputs>
    <data format="audio" name="out_file1" />
  </outputs>
  <tests>
  </tests>
  <help>
.. class:: infomark

Extract the audio from an audio or video file to a wav file.

  </help>
</tool>
