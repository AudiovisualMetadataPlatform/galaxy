<tool id="aws-trans-2" name="AWS Transcribe to JSON" version="1.0.2">
  <description>AWS Transcribe to standardaized JSON Schema</description>
    <requirements>
        <requirement type="package" version="8.30">coreutils</requirement>
    </requirements>
  <command detect_errors="exit_code">$__tool_directory__/../json_schema/aws_transcribe_to_schema.py $input $aws_trans_out $json_out</command>
   <inputs>
   <!-- should be wave data type -->
    <param name="input" type="data" format="binary" label="From dataset" help="An audio file"/>
    <param name="aws_trans_out" type="data" format="json" label="From Aws Transcribe" help="Output from Aws Transcribe"/>
  </inputs>
  <outputs>
    <data format="json" name="json_out" />
  </outputs>
  <tests>
  </tests>
  <help>
.. class:: infomark

Takes the output of a Kaldi STT and transform it to a standardized schema

  </help>
</tool>
